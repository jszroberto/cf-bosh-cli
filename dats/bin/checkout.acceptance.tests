#! /bin/bash

dir=""
release=""
tests=""
test_dir=""
usage() {
        echo "The script checks out the matching CATS/DATS commit"
        echo
        echo "Usage: $0 OPTION"
        echo
        echo "OPTION - <--dats> or <--cats>" 
        echo "Example: $0 --dats" 



}
if [ $# -lt 1 ]; then
    usage
    exit 1
fi

#
# Process parameters
# 

while [[ $# > 0 ]]
do 
key="$1"
shift 
case $key in 
--dats)
        dir=$(echo $DIEGODIR)
		release="diego"
		tests="diego-acceptance-tests"
		test_dir=$(echo $DATSDIR)
        shift
        ;;
--cats)
		dir=$(echo $CFDIR)
		release="cf"
		tests="cf-acceptance-tests"
		test_dir=$(echo $CATSDIR)
		shift
		;;
        *)
		usage
		exit 1
		;;
esac
done

release_hash=$(./get.current.release.info -r $release | head -n 1)
cd $dir 
git checkout develop
git checkout $release_hash
./scripts/update
commit=$(git submodule | grep $tests | awk -F " " '{print $1}')
cd $test_dir
git checkout $commit




